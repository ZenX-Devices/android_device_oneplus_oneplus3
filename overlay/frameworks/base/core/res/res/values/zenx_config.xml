<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Whether the device supports Smart Pixels -->
    <bool name="config_enableSmartPixels">true</bool>

        <!-- Whether device has dash charging support -->
    <bool name="config_hasDashCharger">true</bool>


    <!-- Defines custom OEM sensor for pocket detection. -->
    <string name="config_pocketJudgeVendorSensorName">org.lineageos.pocketmode.PocketSensor.java</string>

    <!-- Whether device has physical tri state switch -->
    <bool name="config_hasAlertSlider">true</bool>

	<!-- The location of the devices physical tri state switch
         0: Left side
         1: Right side -->
    <integer name="config_alertSliderLocation">0</integer>

    <!-- Whether key handler sends intent when changing slider position -->
    <string name="config_alertSliderIntent"></string>

    <!-- Component names of the services which will keep critical code path warm -->
    <string-array name="config_keep_warming_services" translatable="false" />
    
    <string name="config_cpu_temp_path" translatable="false">/sys/class/thermal/thermal_zone4/temp</string>
    <string name="config_battery_temp_path" translatable="false">/sys/class/power_supply/battery/temp</string>
    <string name="config_gpu_clock_path" translatable="false">/sys/kernel/gpu/gpu_clock</string>
    <string name="config_gpu_busy_path" translatable="false">/sys/kernel/gpu/gpu_busy</string>

    <!-- Whether or not wcg (wide color gamut) should be enabled on this device,
         we only enabled it while the device has ability of mixed color spaces composition -->
    <bool name="config_enableWcgMode">true</bool>


    <!-- Flag indicating whether we should enable the adaptive sleep.-->
    <bool name="config_adaptive_sleep_available">true</bool>

    <!-- Flag indicating whether we should enable smart battery. -->
    <bool name="config_smart_battery_available">true</bool>



</resources>
